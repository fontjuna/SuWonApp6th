<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="hwa.seung.noh.suwonapp6th.another.BballFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bb_team_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team A"/>

        <TextView
            android:id="@+id/bb_score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="48dp"/>

        <Button
            android:id="@+id/bb_add_3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3"/>

        <Button
            android:id="@+id/bb_add_2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2"/>

        <Button
            android:id="@+id/bb_add_1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1"/>
    </LinearLayout>


</FrameLayout>
